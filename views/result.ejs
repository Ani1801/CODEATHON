<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Results Page</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/result.css" />
  </head>
  <body>
    <div class="results-container">
      <!-- Summary Section -->
      <div class="summary">
        <h1>Results Summary</h1>
        <div class="summary-item">
          <strong>Total Packages Assigned:</strong>
          <span id="total-packages">0</span>
        </div>
        <div class="summary-item">
          <strong>Unshipped Packages:</strong>
          <span id="unshipped-packages">0</span>
        </div>
        <div class="summary-item">
          <strong>Total Containers Used:</strong>
          <span id="total-containers">0</span>
        </div>
      </div>

      <!-- Visualizations Section -->
      <div class="visualizations">
        <h2>Container Utilization</h2>
        <div id="chart-container"></div>
      </div>

      <!-- Unshipped Packages List -->
      <div class="unshipped-packages">
        <h2>Unshipped Packages</h2>
        <table id="unshipped-table">
          <thead>
            <tr>
              <th>Package ID</th>
              <th>Reason</th>
            </tr>
          </thead>
          <tbody>
            <!-- Unshipped packages will be dynamically added here -->
          </tbody>
        </table>
      </div>

      <!-- Download Options -->
      <div class="download-options">
        <button id="download-csv">Download CSV</button>
        <button id="download-pdf">Download PDF</button>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/scripts/result.js"></script>
  </body>
</html>
